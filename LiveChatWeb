        function initEmbeddedMessaging() {
            try {
                embeddedservice_bootstrap.settings.language = 'en_US'; // Set language

                embeddedservice_bootstrap.init(
                    '00DcZ000000Cxyp',  // Your Salesforce Org ID
                    'WebchatLive',  // Deployment Name
                    'https://foodja--partial.sandbox.my.site.com/ESWWebchatLive1736400295448', // URL for Embedded Service
                    {
                        scrt2URL: 'https://foodja--partial.sandbox.my.salesforce-scrt.com' // Secure URL
                    }
                );
            } catch (err) {
                console.error('Error loading Embedded Messaging: ', err);
            }
        }
    </script>

    <!-- Load Salesforce Embedded Chat Script -->
